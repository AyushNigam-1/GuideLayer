{
  "manifest_version": 3,
  "name": "Shepherd Injector",
  "version": "1.0",
  "description": "Injects a Shepherd tour into the ChatGPT page.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Start Shepherd Tour"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content-trigger.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/shepherd.min.js",
        "lib/shepherd.min.css",
        "injector.js"
      ],
      "matches": [
        "https://chatgpt.com/*"
      ]
    }
  ]
}